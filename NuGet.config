<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Official NuGet.org package source -->
    <add key="NuGet.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- Microsoft packages source -->
    <add key="Microsoft Visual Studio Offline Packages" value="C:\Program Files (x86)\Microsoft SDKs\NuGetPackages\" />
    
    <!-- Example of a custom package source (commented out by default) -->
    <!-- <add key="MyCustomFeed" value="https://my-custom-feed.com/nuget/v3/index.json" /> -->
  </packageSources>
  
  <!-- Package source mapping for enhanced security and performance -->
  <packageSourceMapping>
    <packageSource key="NuGet.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
  
  <!-- Default package management settings -->
  <config>
    <!-- Automatically restore packages on build -->
    <add key="automatic-package-restore" value="true" />
    
    <!-- Use HTTPS for all package sources -->
    <add key="requireHttps" value="true" />
    
    <!-- Default push source -->
    <add key="defaultPushSource" value="https://api.nuget.org/v3/index.json" />
    
    <!-- Global packages folder -->
    <add key="globalPackagesFolder" value="packages" />
  </config>
  
  <!-- Disable default package sources if needed -->
  <disabledPackageSources>
    <!-- Example: Disable offline packages on non-Windows systems -->
    <!-- <add key="Microsoft Visual Studio Offline Packages" value="true" /> -->
  </disabledPackageSources>
</configuration>